SMTP_HOST=smtp.example.com
SMTP_PORT=587
EMAIL=user@example.com
EMAIL_PASSWORD=your_app_password
# Display name shown in recipient inbox (pairs with EMAIL automatically)
EMAIL_FROM=Portfolio
